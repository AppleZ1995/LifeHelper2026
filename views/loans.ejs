<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Life 2026 Helper</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/events">Event Manager</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/loans">Loan Manager</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users">Users</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid mt-5">
      <div class="row">
        <div class="col-md-12">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><%= title %></h1>
            <a href="/loans/add" class="btn btn-primary">Add New Loan</a>
          </div>

          <!-- Loan Summary Card -->
          <div class="row mb-4">
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Total Loan Principal</h5>
                  <p class="card-text h4 text-danger">¥<%= totalPrincipal %></p>
                </div>
              </div>
            </div>
            <div class="col-md-6">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Active Loans</h5>
                  <p class="card-text h4"><%= loans.filter(l => l.status === 'active').length %></p>
                </div>
              </div>
            </div>
          </div>

          <!-- Loans Table -->
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h5 class="mb-0">Your Loans</h5>
            </div>
            <div class="card-body">
              <% if (loans.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead class="table-dark">
                      <tr>
                        <th>Loan Name</th>
                        <th>Lender</th>
                        <th>Principal</th>
                        <th>Interest Rate</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% loans.forEach(loan => { %>
                        <tr>
                          <td><strong><%= loan.name %></strong></td>
                          <td><%= loan.lender %></td>
                          <td class="text-danger fw-bold">¥<%= parseFloat(loan.principal).toFixed(2) %></td>
                          <td><%= parseFloat(loan.interestRate).toFixed(2) %>%</td>
                          <td><%= loan.startDate %></td>
                          <td><%= loan.endDate || 'N/A' %></td>
                          <td>
                            <% if (loan.status === 'active') { %>
                              <span class="badge bg-success">Active</span>
                            <% } else if (loan.status === 'completed') { %>
                              <span class="badge bg-info">Completed</span>
                            <% } else { %>
                              <span class="badge bg-warning">Paused</span>
                            <% } %>
                          </td>
                          <td>
                            <a href="/loans/<%= loan.id %>" class="btn btn-sm btn-info">Details</a>
                            <a href="/loans/edit/<%= loan.id %>" class="btn btn-sm btn-warning">Edit</a>
                            <form method="POST" action="/loans/<%= loan.id %>/delete" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <div class="alert alert-info">
                  No loans found. <a href="/loans/add">Add a new loan</a> to get started.
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
