<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Life 2026 Helper</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/events">Event Manager</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/loans">Loan Manager</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" href="/lottery">Lottery Manager</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users">Users</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container-fluid mt-5">
      <div class="row">
        <div class="col-md-12">
          <div class="d-flex justify-content-between align-items-center mb-4">
            <h1><%= title %></h1>
            <a href="/lottery/add" class="btn btn-primary">Add Lottery Ticket</a>
          </div>

          <!-- Lottery Summary Cards -->
          <div class="row mb-4">
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Total Spent</h5>
                  <p class="card-text h4 text-danger">¥<%= totalSpent %></p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Total Winnings</h5>
                  <p class="card-text h4 text-success">¥<%= totalWinnings %></p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Net Result</h5>
                  <p class="card-text h4 <% if (parseFloat(netResult) >= 0) { %>text-success<% } else { %>text-danger<% } %>">¥<%= netResult %></p>
                </div>
              </div>
            </div>
            <div class="col-md-3">
              <div class="card">
                <div class="card-body">
                  <h5 class="card-title">Status Overview</h5>
                  <p class="card-text">
                    <span class="badge bg-success"><%= wonCount %> Won</span>
                    <span class="badge bg-danger"><%= lostCount %> Lost</span>
                    <span class="badge bg-warning"><%= pendingCount %> Pending</span>
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Lottery Tickets Table -->
          <div class="card">
            <div class="card-header bg-dark text-white">
              <h5 class="mb-0">Lottery Tickets</h5>
            </div>
            <div class="card-body">
              <% if (tickets.length > 0) { %>
                <div class="table-responsive">
                  <table class="table table-striped table-hover">
                    <thead class="table-dark">
                      <tr>
                        <th>Ticket Number</th>
                        <th>Amount Spent</th>
                        <th>Purchase Date</th>
                        <th>Draw Date</th>
                        <th>Winning Amount</th>
                        <th>Status</th>
                        <th>Actions</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% tickets.forEach(ticket => { %>
                        <tr>
                          <td><strong><%= ticket.ticketNumber %></strong></td>
                          <td class="text-danger">¥<%= parseFloat(ticket.amount).toFixed(2) %></td>
                          <td><%= ticket.purchaseDate %></td>
                          <td><%= ticket.drawDate || 'N/A' %></td>
                          <td class="text-success fw-bold">¥<%= parseFloat(ticket.winningAmount || 0).toFixed(2) %></td>
                          <td>
                            <% if (ticket.status === 'won') { %>
                              <span class="badge bg-success">Won</span>
                            <% } else if (ticket.status === 'lost') { %>
                              <span class="badge bg-danger">Lost</span>
                            <% } else { %>
                              <span class="badge bg-warning">Pending</span>
                            <% } %>
                          </td>
                          <td>
                            <a href="/lottery/detail/<%= ticket.id %>" class="btn btn-sm btn-info">View</a>
                            <a href="/lottery/edit/<%= ticket.id %>" class="btn btn-sm btn-warning">Edit</a>
                            <form method="POST" action="/lottery/delete/<%= ticket.id %>" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                              <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                            </form>
                          </td>
                        </tr>
                      <% }); %>
                    </tbody>
                  </table>
                </div>
              <% } else { %>
                <div class="alert alert-info">
                  No lottery tickets found. <a href="/lottery/add">Add a new ticket</a> to get started.
                </div>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
