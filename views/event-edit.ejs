<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">Life 2026 Helper</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav ms-auto">
            <li class="nav-item">
              <a class="nav-link" href="/">Home</a>
            </li>
            <li class="nav-item">
              <a class="nav-link active" aria-current="page" href="/events">Event Manager</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users">Users</a>
            </li>
          </ul>
        </div>
      </div>
    </nav>

    <div class="container mt-5">
      <div class="row">
        <div class="col-md-8 offset-md-2">
          <h1 class="mb-4">Edit Event</h1>

          <div class="card">
            <div class="card-body">
              <form method="POST" action="/events/edit/<%= event.id %>">
                <div class="mb-3">
                  <label for="description" class="form-label">Description</label>
                  <input type="text" class="form-control" id="description" name="description" value="<%= event.description %>" placeholder="e.g., Salary, Groceries, etc." required>
                  <small class="form-text text-muted">Brief description of the event</small>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="amount" class="form-label">Amount (Â¥)</label>
                      <input type="number" class="form-control" id="amount" name="amount" value="<%= event.amount %>" placeholder="0.00" step="0.01" min="0" required>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="type" class="form-label">Type</label>
                      <select class="form-select" id="type" name="type" required onchange="updateCategories()">
                        <option value="income" <% if(event.type === 'income') { %>selected<% } %>>Income</option>
                        <option value="expense" <% if(event.type === 'expense') { %>selected<% } %>>Expense</option>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="date" class="form-label">Date</label>
                      <input type="date" class="form-control" id="date" name="date" value="<%= event.date %>" required>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="mb-3">
                      <label for="category" class="form-label">Category</label>
                      <select class="form-select" id="category" name="category">
                        <option value="">Select Category</option>
                        <!-- Income categories -->
                        <optgroup label="Income" id="incomeGroup" <% if(event.type === 'income') { %>style="display:block;"<% } else { %>style="display:none;"<% } %>>
                          <option value="Salary" <% if(event.category === 'Salary') { %>selected<% } %>>Salary</option>
                          <option value="Freelance" <% if(event.category === 'Freelance') { %>selected<% } %>>Freelance</option>
                          <option value="Investment" <% if(event.category === 'Investment') { %>selected<% } %>>Investment</option>
                          <option value="Bonus" <% if(event.category === 'Bonus') { %>selected<% } %>>Bonus</option>
                          <option value="Other Income" <% if(event.category === 'Other Income') { %>selected<% } %>>Other Income</option>
                        </optgroup>
                        <!-- Expense categories -->
                        <optgroup label="Expenses" id="expenseGroup" <% if(event.type === 'expense') { %>style="display:block;"<% } else { %>style="display:none;"<% } %>>
                          <option value="Food" <% if(event.category === 'Food') { %>selected<% } %>>Food</option>
                          <option value="Transportation" <% if(event.category === 'Transportation') { %>selected<% } %>>Transportation</option>
                          <option value="Utilities" <% if(event.category === 'Utilities') { %>selected<% } %>>Utilities</option>
                          <option value="Entertainment" <% if(event.category === 'Entertainment') { %>selected<% } %>>Entertainment</option>
                          <option value="Healthcare" <% if(event.category === 'Healthcare') { %>selected<% } %>>Healthcare</option>
                          <option value="Shopping" <% if(event.category === 'Shopping') { %>selected<% } %>>Shopping</option>
                          <option value="Other" <% if(event.category === 'Other') { %>selected<% } %>>Other</option>
                        </optgroup>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                  <a href="/events" class="btn btn-secondary">Cancel</a>
                  <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle"></i> Save Changes
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script>
      function updateCategories() {
        const type = document.getElementById('type').value;
        const incomeGroup = document.getElementById('incomeGroup');
        const expenseGroup = document.getElementById('expenseGroup');
        const categorySelect = document.getElementById('category');

        if (type === 'income') {
          incomeGroup.style.display = 'block';
          expenseGroup.style.display = 'none';
          if (!['Salary', 'Freelance', 'Investment', 'Bonus', 'Other Income'].includes(categorySelect.value)) {
            categorySelect.value = 'Salary';
          }
        } else if (type === 'expense') {
          incomeGroup.style.display = 'none';
          expenseGroup.style.display = 'block';
          if (!['Food', 'Transportation', 'Utilities', 'Entertainment', 'Healthcare', 'Shopping', 'Other'].includes(categorySelect.value)) {
            categorySelect.value = 'Food';
          }
        }
      }
    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
